/* pages/question/question.wxss */
page{
  width:100%;
  height:100%;
  overflow: hidden;
}

.container{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
}

.qindex {
    margin-top: 8rpx;
    height: 8%;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    justify-content: center; 
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.question {
  margin-top: 10px;
  height: 65%;
  width: 100%;
  background: #FFF;
  border: 1px solid rgba(0, 0, 0, .1);
  border-left: none;
  border-right: none;
}

.question_item {
  margin-top: 5px;
}

.question_content {
  border-left: 3px solid green; /*文字左边框*/
  padding-left: 3px; /*左边距: 文字离左边框的距离*/
  font-family: "Comic Sans MS", cursive, sans-serif;
  font-size: large;
  position: relative;
  left: 15rpx;
  
}

.radio {
  margin-top: 10rpx;
  display: block;
  position: relative;
  left: 30rpx;
}

.fill_question {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.fill_content {
  font-family: "Comic Sans MS", cursive, sans-serif;
  font-size: medium;
  position: relative;
  left: 30rpx;
}
.fill_blank {
  border: none;
  border-bottom: 1px solid black;
  width: 100rpx;
  position: relative;
  left: 30rpx;
  text-align:center;
}

.buttons {
  margin-top: 30rpx;
  height: 20%;
  width: 80%; 
}
.button_last {
  margin-bottom: 20rpx;
}
.button-hover {
  background-color: grey;
}

